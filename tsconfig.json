{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "lib": [
            "ES2023",
            "DOM"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "paths": {
            "@openmandate/core/*": [
                "./src/*"
            ],
            "@openmandate/skill-uk-law": [
                "./packages/skill-uk-law/index.ts"
            ],
            "@openmandate/skill-uk-law/*": [
                "./packages/skill-uk-law/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}